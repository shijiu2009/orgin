<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- 黑色 -->
    <color name="black">#FF000000</color>
    <!-- 白色 -->
    <color name="white">#FFFFFFFF</color>
    <!-- 红色 -->
    <color name="red">#FF0000</color>
   
    <!-- 背景颜色 -->
    <color name="bg_color">#fff</color>
	<color name="tab_font_color">#4c4c4c</color>
    <color name="top_color">#47ba37</color>
    <color name="login_color">#eeeeee</color>
    <color name="transparent">#00000000</color>
    <color name="viewfinder_frame">#ff000000</color>
	<color name="viewfinder_laser">#2AB045</color>
	<color name="viewfinder_mask">#60000000</color>
	<color name="result_view">#b0000000</color>
	
    <style name="main_tab_style">
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:textColor">@color/tab_font_color</item>
        <item name="android:background">@drawable/nobg</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:paddingTop">@dimen/px5</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- 弹出提示框样式 -->
    <style name="tip_dialog" parent="@android:style/Theme.Dialog">
         <item name="android:windowFrame">@null</item><!--边框-->
         <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
         <item name="android:windowIsTranslucent">true</item><!--半透明-->
         <item name="android:windowNoTitle">true</item>
         <item name="android:windowBackground">@drawable/nobg</item>
         <item name="android:backgroundDimEnabled">false</item><!--遮罩-->
     </style>  
     
     <!-- 顶部样式 -->
    <style name="main_top_style">
         <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/px70</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/top_color</item>
    </style>
    <!-- 顶部标题样式 -->
    <style name="main_top_title_style">
         <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp24</item>
        <item name="android:textColor">@color/white</item>
         <item name="android:singleLine">true</item>
         <item name="android:gravity">center</item>
         <item name="android:ellipsize">end</item>
    </style>
    <!-- 顶部图片样式 -->
    <style name="main_top_image_style">
        <item name="android:layout_width">@dimen/px48</item>
        <item name="android:layout_height">@dimen/px48</item>
         <item name="android:layout_margin">@dimen/px5</item>
        <item name="android:scaleType">center</item>
    </style>
</resources>
