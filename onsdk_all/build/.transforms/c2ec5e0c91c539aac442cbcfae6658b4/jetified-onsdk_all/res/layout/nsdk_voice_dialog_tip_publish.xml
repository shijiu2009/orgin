<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/navi_dimens_334dp"
              android:orientation="vertical"
              >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/navi_dimens_72dp"
            android:background="@drawable/nsdk_voice_tip_dialog_top_bg"
    >
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/navi_dimens_18dp"
                android:orientation="vertical"
                android:layout_centerVertical="true">
        <TextView
                android:id="@+id/nsdk_voice_tip_publich_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/navi_dimens_20dp"
                android:textColor="#333333"
                android:text="请选择您举报的原因"/>
            <TextView
                    android:id="@+id/nsdk_voice_tip_publish_subtitle"
                    android:layout_width="wrap_content"
                    android:textColor="#999999"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/navi_dimens_5dp"
                    android:textSize="@dimen/navi_dimens_12dp"
                    android:text="发布后产品其他用户可见，点击更多按钮可取消"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
                android:id="@+id/nsdk_voice_tip_publich_close"
                android:layout_width="@dimen/navi_dimens_12dp"
                android:layout_height="@dimen/navi_dimens_12dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/navi_dimens_20dp"
                android:layout_marginTop="@dimen/navi_dimens_29dp"
                android:src="@drawable/nsdk_voice_item_loading_icon_close"/>
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#E3E3E3"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F3F3F3"
            android:orientation="vertical"
            android:paddingBottom="@dimen/navi_dimens_6dp">
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/nsdk_voice_tip_publich_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/navi_dimens_10dp"
                android:paddingTop="@dimen/navi_dimens_10dp"
                android:paddingRight="@dimen/navi_dimens_18dp"
                android:layout_weight="1">

        </androidx.recyclerview.widget.RecyclerView>

        <Button
                android:clickable="false"
                android:id="@+id/nsdk_voice_tip_public_btn"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/navi_dimens_18dp"
                android:layout_marginRight="@dimen/navi_dimens_18dp"
                android:layout_height="wrap_content"
                android:text="发布语音"
                android:textSize="@dimen/navi_dimens_18dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/nsdk_voice_dialog_tip_publish_btn_selector"
        />
    </LinearLayout>

</LinearLayout>