<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/navi_dimens_72dp"
            android:background="@drawable/nsdk_voice_tip_dialog_top_bg"
            >
        <ImageView
                android:id="@+id/voice_tip_dialog_icon"
                android:layout_marginLeft="@dimen/navi_dimens_18dp"
                android:layout_marginTop="@dimen/navi_dimens_14dp"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/navi_dimens_43dp"
                android:layout_height="@dimen/navi_dimens_43dp"/>
        <TextView
                android:id="@+id/voice_tip_dialog_name"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/navi_dimens_70dp"
                android:text="给爸妈的语音包"
                android:textSize="@dimen/navi_dimens_15dp"
                android:singleLine="true"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/navi_dimens_70dp"
                android:layout_marginTop="39dp"
                android:text="更多选项"
                android:textColor="#999999"
                android:textSize="@dimen/navi_dimens_12dp"
                android:visibility="gone"
        />
        <ImageView
                android:id="@+id/voice_tip_dialog_close"
                android:layout_width="@dimen/navi_dimens_12dp"
                android:layout_height="@dimen/navi_dimens_12dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/navi_dimens_20dp"
                android:layout_marginTop="@dimen/navi_dimens_29dp"
                android:src="@drawable/nsdk_voice_item_loading_icon_close"/>
    </RelativeLayout>

    <View android:layout_width="match_parent"
          android:layout_height="1px"
          android:background="#E3E3E3"/>

    <LinearLayout
            android:id="@+id/voice_tip_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F3F3F3"
            android:padding="@dimen/navi_dimens_18dp">


    </LinearLayout>
</LinearLayout>