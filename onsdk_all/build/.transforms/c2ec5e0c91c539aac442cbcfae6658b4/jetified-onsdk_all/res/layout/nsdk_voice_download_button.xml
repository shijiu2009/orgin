<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/voice_download_btn_shader"
            android:layout_width="@dimen/navi_dimens_74dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/navi_dimens_13dp"
            android:src="@drawable/voice_donwload_btn_shader" />

    <FrameLayout
            android:id="@+id/voice_download_btn_edging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nsdk_voice_download_button_bg_blue">



        <com.baidu.navisdk.ui.routeguide.asr.view.BNVoiceCornerView
                android:id="@+id/voice_download_btn_bg"
                android:layout_width="@dimen/navi_dimens_72dp"
                android:layout_height="@dimen/navi_dimens_24dp"
                android:layout_margin="@dimen/navi_dimens_1dp"
                app:rectRadius="@dimen/navi_dimens_14dp"
                android:background="#FFFFFF">

            <ProgressBar
                    android:id="@+id/voice_download_btn_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:progressDrawable="@drawable/bnav_voice_download_progress"
                    android:layout_height="match_parent"
                    android:progress="50"
            />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical">
            <ImageView
                    android:id="@+id/voice_download_btn_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/nsdk_voice_download_used_icon"
                    android:paddingRight="@dimen/navi_dimens_3dp"/>
            <TextView
                    android:id="@+id/voice_download_btn_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="34.9MB"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:textSize="12dp"/>
        </LinearLayout>



        </com.baidu.navisdk.ui.routeguide.asr.view.BNVoiceCornerView>

    </FrameLayout>>
</RelativeLayout>