<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:minHeight="@dimen/navi_dimens_84dp"
    android:background="#ffffff"
    android:descendantFocusability="blocksDescendants">
    
	<ImageView
	    android:id="@+id/voice_head_view"
	    android:layout_width="@dimen/navi_dimens_60dp"
        android:layout_height="@dimen/navi_dimens_60dp"
        android:layout_marginLeft="@dimen/navi_dimens_10dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
	    />
	
	<RelativeLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/voice_head_view"
	    android:layout_toLeftOf="@+id/voice_btn_area"
	    android:layout_marginLeft="@dimen/navi_dimens_10dp"
	    android:paddingTop="@dimen/navi_dimens_10dp"
	    android:paddingBottom="@dimen/navi_dimens_10dp"
	    >
	    <TextView
	        android:id="@+id/voice_title" 
	        android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="普通话"
		    android:textSize="15sp"
		    android:textColor="@color/nsdk_voice_main_text_name_color"
		    android:layout_alignParentTop="true"
	        />
	     <ProgressBar 
	        android:id="@+id/voice_progress" 
	        android:layout_width="fill_parent"
		    android:layout_height="@dimen/navi_dimens_3dp"
		    android:layout_below="@id/voice_title"
		    android:layout_marginRight="@dimen/navi_dimens_20dp"
		    android:layout_marginTop="@dimen/navi_dimens_8dp"
		    android:layout_centerVertical="true"
		    style="?android:attr/progressBarStyleHorizontal"
		    android:focusable="false"
		    android:focusableInTouchMode="false"
		    android:max="100"
		    android:progress="50"
		    android:progressDrawable="@drawable/nsdk_voice_download_progressbar"
		    android:visibility="invisible"
	        />
	    <TextView
	        android:id="@+id/voice_size" 
	        android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/voice_progress"
		    android:layout_marginTop="@dimen/navi_dimens_8dp"
		    android:text="100MB"
		    android:textSize="14sp"
		    android:textColor="@color/nsdk_voice_main_text_size_color"
	        />
	    <TextView
	        android:id="@+id/voice_downcnt" 
	        android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignBaseline="@id/voice_size"
		    android:layout_toRightOf="@id/voice_size"
		    android:layout_marginLeft="@dimen/navi_dimens_15dp"
		    android:visibility="visible"
		    android:text="1万次"
		    android:textSize="14sp"
		    android:textColor="@color/nsdk_voice_category_text_color"
	        />
    
	   
	</RelativeLayout>
	
    
    <RelativeLayout
        android:id="@+id/voice_btn_area"
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="@dimen/navi_dimens_20dp"
	    android:layout_centerVertical="true"
        >
        <TextView 
            android:id="@+id/voice_used_text"
            android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:text="使用中"
	    	android:visibility="gone"
	    	android:paddingRight="@dimen/navi_dimens_10dp"
	    	android:textSize="14sp"
	    	android:textColor="@color/nsdk_voice_main_text_use_color"
            />
        <Button 
            android:id="@+id/voice_use_button"
            android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:textSize="14sp"
	    	android:text="使用"
	    	android:paddingLeft="@dimen/navi_dimens_16dp"
	    	android:paddingRight="@dimen/navi_dimens_16dp"
	    	android:paddingTop="@dimen/navi_dimens_8dp"
	    	android:paddingBottom="@dimen/navi_dimens_8dp"
	    	android:visibility="gone"
	    	android:textColor="@color/nsdk_voice_main_use_btn_text_color"
	    	android:background="@drawable/nsdk_voice_use_btn_bg_selector"
            />
        <ImageView
        	android:id="@+id/voice_down_button" 
        	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:visibility="visible"
	    	android:src="@drawable/nsdk_voice_download_start"
        />
	    <TextView
	        android:id="@+id/voice_percent"
	        android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="@dimen/navi_dimens_5dp"
		    android:layout_below="@id/voice_down_button"
		    android:layout_centerHorizontal="true"
		    android:layout_marginBottom="@dimen/navi_dimens_10dp"
		    android:visibility="gone"
		    android:text="29.3%"
		    android:textSize="12sp"
		    android:textColor="@color/nsdk_voice_main_progress_percent_color"
	        />
    </RelativeLayout>
    
</RelativeLayout>
