<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <com.baidu.navisdk.ui.widget.EmptyTopLayout
        android:id="@+id/nsdk_top_empty_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"></com.baidu.navisdk.ui.widget.EmptyTopLayout>

    <RelativeLayout
        android:id="@+id/ipo_bright_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/nsdk_top_empty_view"
        android:background="#00000000" >

        <FrameLayout
            android:id="@+id/map_control_panel_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/light_navi_line"
            android:layout_below="@+id/bnav_lv_rg_route_info"
            android:background="@android:color/transparent" >

            <RelativeLayout
                android:id="@+id/map_control_panel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/navi_dimens_8dp"
                android:background="#00000000" >

                <RelativeLayout
                    android:id="@+id/bnav_lv_rg_road_condition_parent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/navi_dimens_40dp"
                    android:layout_marginLeft="@dimen/navi_dimens_10dp"
                    android:layout_marginRight="@dimen/navi_dimens_10dp"
                    android:layout_marginTop="@dimen/navi_dimens_2dp"
                    android:background="@drawable/nsdk_ipo_yellow_banner_bg"
                    android:gravity="center"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/bnav_iv_rg_road_jam"
                        android:layout_width="@dimen/navi_dimens_19dp"
                        android:layout_height="@dimen/navi_dimens_19dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/navi_dimens_8dp"
                        android:src="@drawable/nsdk_ipo_route_guide" />

                    <RelativeLayout
                        android:id="@+id/bnav_lv_rg_road_condition_close"
                        android:layout_width="@dimen/navi_dimens_20dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/navi_dimens_8dp" >

                        <ImageView
                            android:layout_width="@dimen/navi_dimens_12dp"
                            android:layout_height="@dimen/navi_dimens_12dp"
                            android:layout_centerInParent="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/nsdk_ipo_condition_close_button" />
                    </RelativeLayout>

                    <com.baidu.navisdk.ui.widget.AlwaysMarqueeTextView
                        android:id="@+id/bnav_lv_rg_road_condition"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/navi_dimens_48dp"
                        android:layout_marginLeft="@dimen/navi_dimens_8dp"
                        android:layout_marginRight="@dimen/navi_dimens_8dp"
                        android:layout_toLeftOf="@id/bnav_lv_rg_road_condition_close"
                        android:layout_toRightOf="@id/bnav_iv_rg_road_jam"
                        android:clickable="false"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center_vertical"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="锁屏显示，快点电源键试试锁屏显示！"
                        android:textColor="#703a04"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/map_control_left_panel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000" >

                    <RelativeLayout
                        android:id="@+id/location_layout"
                        android:layout_width="@dimen/navi_dimens_40dp"
                        android:layout_height="@dimen/navi_dimens_40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/navi_dimens_8dp"
                        android:background="@drawable/nsdk_ipo_main_button"
                        android:gravity="center" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/location_btn"
                                android:layout_width="@dimen/nsdk_rg_control_panel_icon_size"
                                android:layout_height="@dimen/nsdk_rg_control_panel_icon_size"
                                android:scaleType="centerInside"
                                android:src="@drawable/nsdk_ipo_location_car_point" />
                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/locProgress"
                            style="@style/LocationProgressStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/nsdk_drawable_rg_ic_locate_loading"
                            android:gravity="center"
                            android:visibility="gone" >
                        </ProgressBar>
                    </RelativeLayout>

					<RelativeLayout
                        android:id="@+id/ugc_report_layout"
                        android:layout_width="@dimen/navi_dimens_40dp"
                        android:layout_height="@dimen/navi_dimens_40dp"
                        android:layout_above="@id/location_layout"
                        android:layout_marginBottom="@dimen/navi_dimens_4dp"
                       	android:layout_marginLeft="@dimen/navi_dimens_8dp"
                        android:background="@drawable/nsdk_ipo_main_button"
                        android:gravity="center" >
                        <ImageView
                                android:id="@+id/ugc_report_Iv"
                                android:layout_width="@dimen/navi_dimens_24dp"
                                android:layout_height="@dimen/navi_dimens_19dp"
                                android:layout_centerHorizontal="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/nsdk_ugc_upload"/>

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/ugc_report_Iv"
                                android:layout_centerHorizontal="true"
                                android:gravity="center"
                                android:textColor="#000"
                                android:layout_marginTop="-1dp"
                                android:textSize="@dimen/navi_dimens_10dp"
                                android:text="上报"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/bnav_rg_cp_safe"
                        android:layout_width="@dimen/navi_dimens_40dp"
                        android:layout_height="@dimen/navi_dimens_40dp"
                        android:layout_marginBottom="@dimen/navi_dimens_4dp"
                        android:layout_marginLeft="@dimen/navi_dimens_8dp"
                        android:layout_above="@id/ugc_report_layout"
                        android:background="@drawable/nsdk_ipo_main_button"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/bnav_iv_rg_cp_safe"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerInside"
                            android:src="@drawable/nsdk_drawable_common_ic_safe_ipo" />
                    </LinearLayout>
                    <!-- 缩放比例 -->

                    <RelativeLayout
                        android:id="@+id/map_scale_level_layout"
                        android:layout_width="@dimen/navi_dimens_54dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignWithParentIfMissing="true"
                        android:layout_marginLeft="@dimen/navi_dimens_8dp"
                        android:layout_toRightOf="@id/location_layout" >

                        <TextView
                            android:id="@+id/scale_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="100米"
                            android:textColor="#333333"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/scale_indicator"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/navi_dimens_7dp"
                            android:layout_below="@id/scale_title"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/nsdk_common_ic_scale_indicator"
                            android:paddingTop="@dimen/navi_dimens_0dp" />

                        <TextView
                            android:id="@+id/app_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/scale_indicator"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/nsdk_map_watermark"
                            android:paddingTop="@dimen/navi_dimens_2dp"
                            android:textColor="#0000bb"
                            android:textSize="10sp" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/map_control_right_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000" >

                    <!-- 联网图标 -->

                    <ImageButton
                        android:id="@+id/btn_map_net_status"
                        android:layout_width="@dimen/navi_dimens_39dp"
                        android:layout_height="@dimen/navi_dimens_38dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/navi_dimens_5dp"
                        android:layout_marginRight="@dimen/navi_dimens_8dp"
                        android:background="@drawable/nsdk_drawable_common_bg_card_transparent_normal"
                        android:src="@drawable/nsdk_drawable_common_ic_map_networking"
                        android:visibility="gone" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/bnav_rg_user_right_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/bnav_lv_rg_road_condition_parent"
                    android:layout_marginLeft="@dimen/navi_dimens_10dp"
                    android:layout_marginTop="@dimen/navi_dimens_10dp"
                    android:visibility="gone"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/user_cur_milea_ll"
                        android:layout_width="@dimen/navi_dimens_49dp"
                        android:layout_height="@dimen/navi_dimens_49dp"
                        android:background="@drawable/bnav_user_cur_milea_bg"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/user_current_milea_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/navi_dimens_5dp"
                            android:text="16"
                            android:textColor="#3eca8c"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/user_current_milea_tips_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-5dp"
                            android:text="本月公里"
                            android:textColor="#aaaaaa"
                            android:textSize="@dimen/navi_dimens_8dp"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/user_right_upgrade_tips_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/navi_dimens_37dp"
                        android:layout_marginTop="@dimen/navi_dimens_3dp"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/navi_dimens_17dp"
                            android:background="@drawable/bnav_user_right_upgrade_tips_arrow" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bnav_user_right_upgrade_tips_bg"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/navi_dimens_5dp" >

                            <TextView
                                android:id="@+id/user_right_upgrade_tips_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="剩余xxx公里晋级"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/navi_dimens_12dp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_ipo_tts_parent"
                    android:layout_width="@dimen/navi_dimens_40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/bnav_lv_rg_road_condition_parent"
                    android:layout_marginRight="@dimen/navi_dimens_8dp"
                    android:layout_marginTop="@dimen/navi_dimens_10dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/layout_its_switch"
                        android:layout_width="@dimen/navi_dimens_40dp"
                        android:layout_height="@dimen/navi_dimens_40dp"
                        android:background="@drawable/nsdk_ipo_main_button"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/image_its_switch"
                            android:layout_width="@dimen/navi_dimens_40dp"
                            android:layout_height="match_parent"
                            android:contentDescription="its"
                            android:scaleType="centerInside"
                            android:src="@drawable/nsdk_ipo_road_condition_off" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bnav_rg_cp_replan"
                        android:layout_width="@dimen/navi_dimens_40dp"
                        android:layout_height="@dimen/navi_dimens_40dp"
                        android:layout_marginTop="@dimen/navi_dimens_3dp"
                        android:background="@drawable/nsdk_ipo_main_button"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/bnav_iv_rg_cp_replan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="its"
                            android:scaleType="centerInside"
                            android:src="@drawable/nsdk_ipo_refresh" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/nav_zoom_panel"
                        android:layout_width="@dimen/navi_dimens_40dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/navi_dimens_8dp"
                        android:orientation="vertical"
                        android:padding="0.5dp" >

                    <RelativeLayout
                            android:id="@+id/btn_zoom_in"
                            android:layout_width="@dimen/navi_dimens_40dp"
                            android:layout_height="@dimen/navi_dimens_40dp"
                            android:background="@drawable/nsdk_ipo_main_zoomout_btn_bg"
                            android:gravity="center" >

                        <ImageView
                                android:id="@+id/iv_zoom_in"
                                android:layout_width="@dimen/navi_dimens_40dp"
                                android:layout_height="@dimen/navi_dimens_40dp"
                                android:layout_gravity="center"
                                android:scaleType="centerInside"
                                android:src="@drawable/nsdk_ipo_main_zoomin" />
                    </RelativeLayout>

                    <RelativeLayout
                            android:id="@+id/btn_zoom_out"
                            android:layout_width="@dimen/navi_dimens_40dp"
                            android:layout_height="@dimen/navi_dimens_40dp"
                            android:background="@drawable/nsdk_ipo_main_zommin_btn_bg"
                            android:gravity="center" >

                        <ImageView
                                android:id="@+id/iv_zoom_out"
                                android:layout_width="@dimen/navi_dimens_40dp"
                                android:layout_height="@dimen/navi_dimens_40dp"
                                android:layout_gravity="center"
                                android:scaleType="centerInside"
                                android:src="@drawable/nsdk_ipo_main_zoomout" />
                    </RelativeLayout>

                    <ImageView
                            android:id="@+id/btn_zoom_full_view"
                            android:layout_width="@dimen/navi_dimens_38dp"
                            android:layout_height="@dimen/navi_dimens_40dp"
                            android:background="@drawable/nsdk_drawable_common_bg_prj_card_selector"
                            android:gravity="center"
                            android:scaleType="centerInside"
                            android:src="@drawable/nsdk_drawable_rg_ic_fullview"
                            android:visibility="gone" />
                </LinearLayout>

            </RelativeLayout>
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/bnav_lv_rg_route_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navi_dimens_44dp"
            android:layout_alignParentTop="true"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:tag="portrait"
            android:visibility="visible" >

            <!-- 退出按钮 -->

            <LinearLayout
                android:id="@+id/bnav_ll_rg_quit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/bnav_lv_rg_quit"
                    android:layout_width="@dimen/navi_dimens_49dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/bnav_titlebar_ic_back_normal_black" />
            </LinearLayout>
            <!-- 菜单按钮 -->

            <TextView
                android:id="@+id/ipo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="路线雷达"
                android:textColor="@color/nsdk_cl_text_a"
                android:textSize="@dimen/navi_dimens_18dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/navi_dimens_15dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/bnav_lv_rg_ll_ipo_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/navi_dimens_23dp"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerInside"
                        android:src="@drawable/nsdk_ipo_guide_btn" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bnav_lv_rg_ll_lock_screen"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerInside"
                        android:src="@drawable/nsdk_ipo_lock" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@id/light_navi_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_above="@+id/bottom_btn_parent"
            android:background="@color/nsdk_cl_bg_b" />

        <RelativeLayout
            android:id="@id/bottom_btn_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" >

            <RelativeLayout
                android:id="@+id/light_navi_bottom_btn_parent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/navi_dimens_75dp" >

                <LinearLayout
                    android:id="@+id/bnav_lv_rg_screen_control"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/nsdk_cl_bg_d"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:tag="portrait"
                    android:visibility="visible" >

                    <LinearLayout
                        android:id="@+id/bnav_lv_rg_ll_guide_bar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/navi_dimens_15dp"
                            android:layout_marginTop="@dimen/navi_dimens_12dp"
                            android:layout_weight="1" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/bnav_lv_rg_next_dis"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:singleLine="true"
                                    android:text="50米"
                                    android:textColor="@color/nsdk_cl_ipo_guide"
                                    android:textSize="@dimen/navi_dimens_16dp" />

                                <ImageView
                                    android:id="@+id/bnav_lv_rg_next_turn"
                                    android:layout_width="@dimen/navi_dimens_20dp"
                                    android:layout_height="@dimen/navi_dimens_18dp"
                                    android:layout_marginLeft="@dimen/navi_dimens_8dp"
                                    android:layout_marginRight="@dimen/navi_dimens_8dp"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/nsdk_ipo_turn_right" />

                                <TextView
                                    android:id="@+id/bnav_lv_rg_next_road_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:singleLine="true"
                                    android:text="进入上地西路辅路"
                                    android:textColor="@color/nsdk_cl_ipo_guide"
                                    android:textSize="@dimen/navi_dimens_16dp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/bnav_lv_rg_overspeed"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/nsdk_cl_bg_d"
                                android:ellipsize="end"
                                android:gravity="left"
                                android:singleLine="true"
                                android:text="前方限速XX,你已超速！"
                                android:textColor="#ff3b3b"
                                android:textSize="@dimen/navi_dimens_16dp"
                                android:visibility="gone"
                                />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/navi_dimens_14dp"
                            android:layout_marginLeft="@dimen/navi_dimens_15dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/bnav_lv_rg_arrive_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="30分钟 "
                                android:textColor="@color/nsdk_cl_ipo_guide"
                                android:textSize="@dimen/navi_dimens_19dp" />

                            <View
                                android:id="@id/light_navi_line"
                                android:layout_width="@dimen/navi_dimens_1dp"
                                android:layout_height="@dimen/navi_dimens_15dp"
                                android:layout_marginLeft="@dimen/navi_dimens_5dp"
                                android:layout_marginRight="@dimen/navi_dimens_5dp"
                                android:background="@color/nsdk_cl_bg_b" />

                            <TextView
                                android:id="@+id/bnav_lv_rg_total_dist"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="11.4公里"
                                android:textColor="@color/nsdk_cl_ipo_guide"
                                android:textSize="@dimen/navi_dimens_19dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:id="@+id/light_navi_line_vertical"
                        android:layout_width="1px"
                        android:layout_height="@dimen/navi_dimens_32dp"
                        android:layout_gravity="center"
                        android:background="@color/nsdk_cl_bg_b" />

                    <LinearLayout
                        android:id="@+id/bnav_lv_rg_ll_switch_to_navi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="@dimen/navi_dimens_30dp"
                            android:layout_height="@dimen/navi_dimens_30dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/nsdk_ipo_navi_switch" />

                        <TextView
                            android:id="@+id/bnav_lv_rg_switch_to_navi"
                            android:layout_width="wrap_content"
