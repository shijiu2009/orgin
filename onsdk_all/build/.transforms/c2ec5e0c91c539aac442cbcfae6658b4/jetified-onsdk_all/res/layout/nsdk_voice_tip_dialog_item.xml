<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navi_dimens_50dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/navi_dimens_50dp"
        >
        <TextView
                android:id="@+id/voice_tip_dialog_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:textColor="#3385FF"
                android:textSize="@dimen/navi_dimens_18dp"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
        />

        <TextView
                android:id="@+id/voice_tip_dialog_item_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/voice_tip_dialog_item_name"
                android:layout_centerVertical="true"
                android:text="所有地图用户可见"
                android:textSize="@dimen/navi_dimens_13dp"
                android:layout_marginLeft="@dimen/navi_dimens_10dp"
                android:textColor="#AFB4BC"
            />
        
        <ImageView
                android:id="@+id/voice_tip_dialog_item_img"
                android:layout_width="@dimen/navi_dimens_15dp"
                android:layout_height="@dimen/navi_dimens_15dp"
                android:src="@drawable/nsdk_route_sort_close"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/navi_dimens_24dp"/>


    </RelativeLayout>
</androidx.cardview.widget.CardView>