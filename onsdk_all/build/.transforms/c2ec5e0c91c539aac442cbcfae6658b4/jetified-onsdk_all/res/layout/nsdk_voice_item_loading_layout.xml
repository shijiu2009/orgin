<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/navi_dimens_30dp"
              android:gravity="center">

    <ImageView
            android:id="@+id/voice_item_loading_img"
            android:layout_width="@dimen/navi_dimens_16dp"
            android:layout_height="16dp"
            android:src="@drawable/nsdk_voice_item_loading_rotate"
            android:layout_marginRight="@dimen/navi_dimens_6dp"/>
    <TextView
            android:id="@+id/voice_item_loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在努力加载"
            android:textSize="@dimen/navi_dimens_13dp"
            android:textColor="#999999"/>

</LinearLayout>