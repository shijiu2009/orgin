<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/navi_dimens_30dp"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/navi_dimens_16dp"
            android:layout_height="@dimen/navi_dimens_16dp"
            tools:src="@drawable/nsdk_drawable_concern_road_home_selector" />

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/navi_dimens_3dp"
            android:gravity="center"
            android:maxLines="1"
            tools:text="@string/nsdk_commute_care_road_go_home"
            android:textColor="@color/bnav_color_concern_road_dest_label_text_selector"
            android:textSize="@dimen/navi_dimens_14dp"
            android:text="@string/nsdk_commute_care_road_go_to_company" />

        <TextView
            android:id="@+id/num_img"
            android:layout_width="@dimen/navi_dimens_14dp"
            android:layout_height="@dimen/navi_dimens_11dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginTop="-10dp"
            android:background="@drawable/nsdk_drawable_commute_care_road_dest_num_bg"
            android:gravity="center"
            android:visibility="gone"
            tools:visibility="gone"
            android:includeFontPadding="false"
            android:textSize="@dimen/navi_dimens_10dp"
            tools:text="3" />
    </LinearLayout>

    <View
        android:id="@+id/concern_road_label_divider"
        android:layout_width="@dimen/navi_dimens_20dp"
        android:layout_height="@dimen/navi_dimens_4dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/navi_dimens_3dp"
        android:background="@drawable/nsdk_drawable_commute_care_road_dest_label_bottom_line"
        android:visibility="gone"
        tools:visibility="visible" />


</RelativeLayout>