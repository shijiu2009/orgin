<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bnav_cruise_menu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/nsdk_cruise_bg_bar">
	
	<LinearLayout 
	    android:id="@+id/layout_cruise_menu_list"
        android:orientation="vertical"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="@dimen/navi_dimens_0dp"
	    android:visibility="visible">

      <TextView
          android:id="@+id/text_cruise_menu_voice_setting_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingTop="@dimen/navi_dimens_10dp"
          android:paddingLeft="@dimen/navi_dimens_10dp"
          android:paddingRight="@dimen/navi_dimens_10dp"
          style="@style/Text_SettingListItemTitleMain"
          android:textSize="20sp"
          android:text="@string/nsdk_string_cruise_voice_content" />

        <RelativeLayout
            android:id="@+id/layout_cruise_menu_voice_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/navi_dimens_10dp"
            android:layout_marginRight="@dimen/navi_dimens_10dp"
            android:paddingTop="@dimen/navi_dimens_15dp"
            android:paddingBottom="@dimen/navi_dimens_15dp"
            android:orientation="horizontal" >
            
            <CheckBox
                android:id="@+id/checkbox_cruise_menu_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:button="@drawable/nsdk_drawable_common_check_box_selector"
                android:checked="true"
                android:textColor="@color/nsdk_color_setting_list_item_text_main"
                android:text="@string/nsdk_string_cruise_voice_speed" />
            <CheckBox
                android:id="@+id/checkbox_cruise_menu_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:button="@drawable/nsdk_drawable_common_check_box_selector"
                android:checked="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/nsdk_color_setting_list_item_text_main"
                android:text="@string/nsdk_string_cruise_voice_camera" />
            <CheckBox
                android:id="@+id/checkbox_cruise_menu_break_rules"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:button="@drawable/nsdk_drawable_common_check_box_selector"
                android:checked="true"
                android:textColor="@color/nsdk_color_setting_list_item_text_main"
                android:text="@string/nsdk_string_cruise_voice_break_rules" />
            <CheckBox
                android:id="@+id/checkbox_cruise_menu_safe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/checkbox_cruise_menu_speed"
                android:layout_marginTop="@dimen/navi_dimens_10dp"
                android:button="@drawable/nsdk_drawable_common_check_box_selector"
                android:checked="true"
                android:textColor="@color/nsdk_color_setting_list_item_text_main"
                android:text="@string/nsdk_string_cruise_voice_safe" />
            
        </RelativeLayout>
        
        <View android:id="@+id/bnav_cruise_menu_line1"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/navi_dimens_1dp"
            android:background="@drawable/nsdk_drawable_common_line_horizontal" />
	   
        <LinearLayout android:id="@+id/layout_cruise_menu_offline_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/navi_dimens_60dp"
            android:paddingLeft="@dimen/navi_dimens_10dp"
            android:paddingRight="@dimen/navi_dimens_10dp"
            android:gravity="center_vertical"
            android:background="@drawable/nsdk_drawable_common_bg_pressed_mask_selector"
            >
	        <TextView
	            android:id="@+id/bnav_cruise_menu_tv_data"
                android:layout_width="@dimen/navi_dimens_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/navi_dimens_15dp"
                android:paddingBottom="@dimen/navi_dimens_15dp"
                android:paddingLeft="@dimen/navi_dimens_0dp"
	            android:gravity="left|center_vertical"
	            style="@style/Text_SettingListItemTitleMain"
	            android:text="@string/nsdk_string_cruise_offline_data_manager" />
            <ImageView
                android:id="@+id/item_arrow_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/navi_dimens_20dp"
                android:src="@drawable/nsdk_drawable_common_ic_list_right_arrow"
                android:background="@android:color/transparent"/>
       </LinearLayout>
       
       <View android:id="@+id/bnav_cruise_menu_line2"    
           android:layout_width="fill_parent"
           android:layout_height="@dimen/navi_dimens_1dp"
           android:background="@drawable/nsdk_drawable_common_line_horizontal" />
       
        <LinearLayout android:id="@+id/layout_cruise_menu_qa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/navi_dimens_60dp"
            android:paddingLeft="@dimen/navi_dimens_10dp"
            android:paddingRight="@dimen/navi_dimens_10dp"
            android:gravity="center_vertical"
            android:background="@drawable/nsdk_drawable_common_bg_pressed_mask_selector"
            >
	        <TextView
	            android:id="@+id/bnav_cruise_menu_tv_qa"
	            android:layout_width="@dimen/navi_dimens_0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:paddingTop="@dimen/navi_dimens_15dp"
                android:paddingBottom="@dimen/navi_dimens_15dp"
                android:paddingLeft="@dimen/navi_dimens_0dp"
	            android:gravity="left|center_vertical"
	            style="@style/Text_SettingListItemTitleMain"
	            android:text="@string/nsdk_string_cruise_newer_qa" />
	        <ImageView
	            android:id="@+id/item_arrow_image2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="@dimen/navi_dimens_20dp"
	            android:src="@drawable/nsdk_drawable_common_ic_list_right_arrow"
	            android:background="@android:color/transparent"/>
       </LinearLayout>
        
       <View android:id="@+id/bnav_cruise_menu_line3"
	        android:layout_width="fill_parent"
	        android:layout_height="@dimen/navi_dimens_1dp"
	        android:background="@drawable/nsdk_drawable_common_line_horizontal" />
	</LinearLayout>

	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navi_dimens_50dp"
        android:gravity="center"
        android:background="#db5959">
	 <Button
        android:id="@+id/btn_cruise_menu_close"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/navi_dimens_15dp"
        android:text="@string/nsdk_string_cruise_close"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/nsdk_drawable_common_bg_pressed_mask_selector" />
	 </LinearLayout>
	 <!-- #ff882222 -->
</LinearLayout>