<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nsdk_more_setting_menu_item_height"
    android:background="#FFFFFF"
    android:paddingLeft="@dimen/navi_dimens_17dp"
    android:paddingRight="@dimen/navi_dimens_7dp">

    <TextView
        android:id="@+id/nsdk_voice_item_setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/navi_dimens_8dp"
        android:text="新语音包WIFI下自动更新"
        android:textColor="#333333"
        android:textSize="@dimen/navi_dimens_14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nsdk_voice_item_setting_title"
        android:paddingTop="@dimen/navi_dimens_5dp"
        android:text="已下载的语音包有更新时，WIFI环境下自动下载"
        android:textColor="#999999"
        android:textSize="@dimen/navi_dimens_12dp" />

    <ImageView
        android:id="@+id/nsdk_voice_item_setting_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:src="@drawable/nsdk_set_checkin_icon" />


</RelativeLayout>