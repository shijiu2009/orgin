<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:paddingTop="@dimen/navi_dimens_16dp"
    android:paddingBottom="@dimen/navi_dimens_10dp">
    <!-- 64% of screen width each item-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/commute_care_road_bottom_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navi_dimens_130dp" />
    <!-- 16% of screen width -->
    <View
        android:id="@+id/right_shadow"
        android:layout_width="@dimen/navi_dimens_57dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/commute_care_road_bottom_recyclerview"
        android:layout_alignBottom="@id/commute_care_road_bottom_recyclerview"
        android:layout_alignParentRight="true"
        android:background="@drawable/nsdk_drawable_concern_road_bottom_panel_right_shadow" />
    <!-- 16% of screen width -->
    <View
        android:id="@+id/left_shadow"
        android:layout_width="@dimen/navi_dimens_57dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/commute_care_road_bottom_recyclerview"
        android:layout_alignBottom="@id/commute_care_road_bottom_recyclerview"
        android:layout_alignParentLeft="true"
        android:background="@drawable/nsdk_drawable_concern_road_bottom_panel_left_shadow" />
</RelativeLayout>